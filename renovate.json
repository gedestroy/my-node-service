{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "group:Jenkins"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Jenkinsfile$"
      ],
      "matchStrings": [
        "[']*(?<depName>[a-z]+)[' ]*: \\[version: '(?<currentValue>[0-9.]+)'\\]"
      ],
      "datasourceTemplate": "jenkins-plugins",
      "description": "Jenkins file service version",
      "depNameTemplate": "ch.post.it.paisa{{#if (equals depName 'platform')}}:paisa-{{depName}}{{else}}.{{depName}}:{{depName}}{{/if}}"
    },
    {
      "fileMatch": [
        "^Jenkinsfile$"
      ],
      "matchStrings": [
        "[']*(?<prefix>data)-(?<name>[^-]+)(-(?<planningAreaId>[\\d]+))[' ]*: \\[version: '(?<currentValue>[0-9.]+)'\\]"
      ],
      "datasourceTemplate": "docker",
      "description": "Jenkins file service version",
      "depNameTemplate": "ch.post.it.paisa.masterdata.prod:{{name}}",
      "extractVersionTemplate": "^prod-{{name}}-{{planningAreaId}}-(?<version>[0-9.]+).zip$",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "groupName" : "Jenkins",
      "matchDatasources": ["jenkins-plugins"],
      "registryUrls": [
        "https://artifactory.tools.post.ch/artifactory/libs-release",
        "https://artifactory.tools.post.ch/artifactory/remote-repos"
      ],
      "automerge": true

    },
    {
      "groupName" : "Data",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["h.post.it.paisa.masterdata.prod"],
      "registryUrls": [
        "https://artifactory.tools.post.ch/artifactory/masterdata-paisa-local/"
      ]
    }
  ]
}

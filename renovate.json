{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:recommended",
    "group:allNonMajor",
    "group:allMajor"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Jenkinsfile$"
      ],
      "matchStrings": [
        "[']*(?<depName>[a-z0-9-]+)[' ]*: \\[version: '(?<currentValue>[a-z0-9.-]+)'\\]"
      ],
      "datasourceTemplate": "docker",
      "description": "Jenkins file service version",
      "depNameTemplate": "ch.post.it.paisa.{{depName}}:{{depName}}"
    }
  ],
  "regex": {
    "automerge": true
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:recommended",
    "group:allNonMajor"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Jenkinsfile$"
      ],
      "matchStrings": [
        "[']*(?<serviceName>[a-z0-9-]+)[' ]*: \\[version: '(?<currentValue>[a-z0-9.-]+)'\\]"
      ],
      "datasourceTemplate": "docker",
      "description": "Jenkins file service version",
      "depNameTemplate": "ch.post.it.paisa.{{serviceName}}"
    }
  ],
  "regex": {
    "automerge": true
  }
}

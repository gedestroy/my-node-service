{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableDependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":combinePatchMinorReleases",
    ":prHourlyLimit2",
    ":prConcurrentLimit20",
    ":preserveSemverRanges",
    "group:recommended",
    "group:allNonMajor",
    "workarounds:all",
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "matchDatasources": ["maven","jenkins"],
      "registryUrls": [
        "https://artifactory.tools.post.ch/artifactory/swisspost",
        "https://artifactory.tools.post.ch/artifactory/libs-release",
        "https://artifactory.tools.post.ch/artifactory/remote-repos"
      ]
    }
  ],
  "jenkins": {
    "fileMatch": "Jenkinsfile"
  }
}

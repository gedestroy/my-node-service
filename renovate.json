{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:recommended",
    "group:allNonMajor"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Jenkinsfile$"
      ],
      "matchStrings": [
        "[']*(?<depName>[a-z0-9-]+)[' ]*: \\[version: '(?<currentValue>[a-z0-9.-]+)'\\]"
      ],
      "datasourceTemplate": "maven",
      "description": "Jenkins file service version",
      "depNameTemplate": "ch.post.it.paisa{{#if (equals depName 'platform')}}:paisa-{{depName}}{{else}}.{{depName}}:{{depName}}{{/if}}"
    }
  ],
  "regex": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchDatasources": ["maven"],
      "registryUrls": [
        "https://artifactory.tools.post.ch/artifactory/libs-release",
        "https://artifactory.tools.post.ch/artifactory/remote-repos"
      ]
    }
  ],
  "ignoreDeps": ["hashicorp/aws"],
  "hostRules": [
    {
      "matchHost": "artifactory.tools.post.ch",
      "enabled": "true"
    }
  ]
}
